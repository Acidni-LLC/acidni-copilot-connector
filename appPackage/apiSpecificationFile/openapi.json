{
  "openapi": "3.0.0",
  "info": {
    "title": "Terprint AI API",
    "description": "API for accessing Terprint cannabis data including strains, lab reports, dispensary locations, deals, and user favorites.",
    "version": "3.7.0"
  },
  "servers": [
    {
      "url": "https://apim-terprint-dev.azure-api.net/copilot",
      "description": "Azure APIM Production"
    }
  ],
  "paths": {
    "/version": {
      "get": {
        "operationId": "getVersion",
        "summary": "Get API version and feature info",
        "description": "Returns the current version of the Terprint AI API and enabled features.",
        "responses": {
          "200": {
            "description": "Version information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "version": { "type": "string" },
                    "features": { "type": "array", "items": { "type": "string" } },
                    "powered_by": { "type": "string" },
                    "website": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ask": {
      "post": {
        "operationId": "askTerprint",
        "summary": "Ask Terprint AI a question",
        "description": "Send a natural language query to Terprint AI about cannabis strains, effects, terpenes, etc.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": { "type": "string" },
                  "user_id": { "type": "string" },
                  "user_email": { "type": "string" },
                  "session_id": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AI response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": { "type": "string" },
                    "sources": { 
                      "type": "array", 
                      "items": { 
                        "type": "object",
                        "properties": {
                          "title": { "type": "string" },
                          "url": { "type": "string" },
                          "type": { "type": "string" }
                        }
                      } 
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/batches": {
      "get": {
        "operationId": "getBatches",
        "summary": "Get lab test batches",
        "parameters": [
          { "name": "strain_name", "in": "query", "schema": { "type": "string" } },
          { "name": "dispensary", "in": "query", "schema": { "type": "string" } },
          { "name": "strain_type", "in": "query", "schema": { "type": "string" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "List of batches",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "strainName": { "type": "string" },
                          "dispensary": { "type": "string" },
                          "strainType": { "type": "string" },
                          "THC": { "type": "number" },
                          "totalTerpenes": { "type": "number" },
                          "batchDate": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/strains": {
      "get": {
        "operationId": "getStrains",
        "summary": "List strains",
        "parameters": [
          { "name": "limit", "in": "query", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "List of strains",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "strain_type": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/locations": {
      "get": {
        "operationId": "getLocations",
        "summary": "Find dispensary locations",
        "parameters": [
          { "name": "city", "in": "query", "schema": { "type": "string" } },
          { "name": "county", "in": "query", "schema": { "type": "string" } },
          { "name": "company", "in": "query", "schema": { "type": "string" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Dispensary locations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "company": { "type": "string" },
                          "city": { "type": "string" },
                          "address": { "type": "string" },
                          "county": { "type": "string" },
                          "zip_code": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/deals": {
      "get": {
        "operationId": "getDeals",
        "summary": "Get current deals",
        "parameters": [
          { "name": "dispensary", "in": "query", "schema": { "type": "string" } },
          { "name": "category", "in": "query", "schema": { "type": "string" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Active deals",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "deals": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "strain_name": { "type": "string" },
                          "dispensary": { "type": "string" },
                          "category": { "type": "string" },
                          "original_price": { "type": "number" },
                          "sale_price": { "type": "number" },
                          "discount_percent": { "type": "number" },
                          "description": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/favorites": {
      "get": {
        "operationId": "getFavorites",
        "summary": "Get user favorites",
        "parameters": [
          { "name": "user_id", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "User's favorite strains",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "favorites": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "strain_name": { "type": "string" },
                          "added_date": { "type": "string" },
                          "notes": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "addFavorite",
        "summary": "Add to favorites",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string" },
                  "strain_name": { "type": "string" },
                  "notes": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "strain_name": { "type": "string" },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "operationId": "removeFavorite",
        "summary": "Remove from favorites",
        "parameters": [
          { "name": "user_id", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "strain_name", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Success message"
          }
        }
      }
    },
    "/stock": {
      "get": {
        "operationId": "checkStock",
        "summary": "Check strain stock",
        "parameters": [
          { "name": "strain", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "zip_code", "in": "query", "schema": { "type": "string" } },
          { "name": "dispensary", "in": "query", "schema": { "type": "string" } },
          { "name": "max_price", "in": "query", "schema": { "type": "number" } }
        ],
        "responses": {
          "200": {
            "description": "Stock availability",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "availability": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "dispensary": { "type": "string" },
                          "location": { "type": "string" },
                          "in_stock": { "type": "boolean" },
                          "price": { "type": "number" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
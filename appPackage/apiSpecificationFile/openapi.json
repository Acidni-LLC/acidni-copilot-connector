{
  "openapi": "3.0.0",
  "info": {
    "title": "Terprint Data API v2",
    "description": "Cannabis data API with strains, batches, lab data, deals, and favorites",
    "version": "3.15.0"
  },
  "servers": [
    {
      "url": "https://apim-terprint-dev.azure-api.net/data/v2",
      "description": "Azure APIM - Terprint Data v2"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Ocp-Apim-Subscription-Key"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "getVersion",
        "summary": "Get API health and version info",
        "responses": {
          "200": {
            "description": "Health and version info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "version": { "type": "string" },
                    "cdes_version": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/strains": {
      "get": {
        "operationId": "getStrains",
        "summary": "List cannabis strains",
        "parameters": [
          { "name": "strain_name", "in": "query", "schema": { "type": "string" }, "description": "Filter by strain name (partial match)" },
          { "name": "type", "in": "query", "schema": { "type": "string" }, "description": "Filter by type: indica, sativa, hybrid" },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 25, "maximum": 100 }, "description": "Max results (1-100, default 25)" },
          { "name": "offset", "in": "query", "schema": { "type": "integer", "default": 0 }, "description": "Pagination offset" }
        ],
        "responses": {
          "200": {
            "description": "List of strains",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "type": "array", "items": { "type": "object" } },
                    "meta": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/batches": {
      "get": {
        "operationId": "getBatches",
        "summary": "Get lab test batches with terpene and cannabinoid profiles",
        "parameters": [
          { "name": "strain_name", "in": "query", "schema": { "type": "string" }, "description": "Filter by strain name" },
          { "name": "dispensary_id", "in": "query", "schema": { "type": "string" }, "description": "Filter by dispensary" },
          { "name": "min_thc", "in": "query", "schema": { "type": "number" }, "description": "Minimum THC percentage" },
          { "name": "min_terpenes", "in": "query", "schema": { "type": "number" }, "description": "Minimum total terpenes" },
          { "name": "include", "in": "query", "schema": { "type": "string" }, "description": "Include: terpenes, cannabinoids, full" },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 25, "maximum": 100 }, "description": "Max results (1-100, default 25)" },
          { "name": "offset", "in": "query", "schema": { "type": "integer", "default": 0 }, "description": "Pagination offset" }
        ],
        "responses": {
          "200": {
            "description": "List of batches with lab data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "type": "array", "items": { "type": "object" } },
                    "meta": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/search": {
      "get": {
        "operationId": "searchData",
        "summary": "Search strains and batches",
        "parameters": [
          { "name": "q", "in": "query", "required": true, "schema": { "type": "string" }, "description": "Search query" },
          { "name": "type", "in": "query", "schema": { "type": "string" }, "description": "Type: strain, batch, or both" },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 20 }, "description": "Max results" }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "type": "object" },
                    "meta": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/dispensaries": {
      "get": {
        "operationId": "getLocations",
        "summary": "List dispensary locations",
        "parameters": [
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 50 }, "description": "Max results" }
        ],
        "responses": {
          "200": {
            "description": "List of dispensaries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "type": "array", "items": { "type": "object" } }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
